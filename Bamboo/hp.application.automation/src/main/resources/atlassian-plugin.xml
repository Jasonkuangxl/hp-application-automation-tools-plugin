<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="english language" location="english"/>
    
    <!-- add our web resources -->
    <web-resource key="hp.application.automation-resources" name="hp.application.automation Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="hp.application.automation.css" location="/css/hp.application.automation.css"/>
        <resource type="download" name="hp.application.automation.js" location="/js/hp.application.automation.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>hp.application.automation</context>
    </web-resource>
    
    <!-- publish our component -->
    <component key="hp.application.automation.bamboo.plugin.component" class="com.hp.application.automation.bamboo.plugin.PluginComponentImpl" public="true">
        <interface>com.hp.application.automation.bamboo.plugin.PluginComponent</interface>
    </component>
    
    <!-- import from the product container -->
    <component-import key="com.atlassian.sal.api.ApplicationProperties" interface="com.atlassian.sal.api.ApplicationProperties" />
	 
	<executable
     key="hpAlmServer" 
     nameKey="hpAlmServer.executableName" 
     pathHelpKey="hpAlmServer.executableHelpPath"/>  
         
	<taskType 
		name="HP ALM Lab Management Environment Preparation" 
		class="com.hp.application.automation.bamboo.tasks.AlmLabEnvPrepareTask" 
		key="com.hp.application.automation.bamboo.tasks.AlmLabEnvPrepareTask">
      <description>Execute AUT Environment preparation using HP ALM Lab Management</description>
      <category name="test"/>
      <executable
     	key="hpAlmServer"
     	nameKey="hpAlmServer.executableName"
     	pathHelpKey="hpAlmServer.executableHelpPath"/>
      <configuration class="com.hp.application.automation.bamboo.tasks.AlmLabEnvPrepareTaskConfigurator"/>
      <resource 
      	type="freemarker" 
      	name="edit" 
      	location="AlmLabEnvPrepareTask.ftl"/>
    </taskType>
    
    <taskType 
    	name="HP ALM Lab Management" 
    	class="com.hp.application.automation.bamboo.tasks.AlmLabManagementTask"
    	key="com.hp.application.automation.bamboo.tasks.AlmLabManagementTask">
      <description>Execute HP tests using HP ALM Lab Management</description>
      <category name="test"/>
      <configuration class="com.hp.application.automation.bamboo.tasks.AlmLabManagementTaskConfigurator"/>
      <resource 
      	type="freemarker" 
      	name="edit" 
      	location="AlmLabManagementTask.ftl"/>
    </taskType>
    
    <taskType 
    	name="HP File System Execution" 
    	class="com.hp.application.automation.bamboo.tasks.RunFromFileSystemTask"
    	key="com.hp.application.automation.bamboo.tasks.RunFromFileSystemTask">
      <description>Execute HP tests from file system</description>
      <category name="test"/>
      <configuration class="com.hp.application.automation.bamboo.tasks.RunFromFileSystemTaskConfigurator"/>
      <!-- <executable key="HP.HP Unified Functional Testing" nameKey="HP.UFT.executable.name"/> -->
      <capabilityDefaultsHelper class="com.hp.application.automation.bamboo.tasks.CapabilityUftDefaultsHelper"/>
      <resource 
      	type="freemarker" 
      	name="edit" 
      	location="RunFromFileSystemTask.ftl"/>
    </taskType>
    
    <taskType 
    	name="HP ALM Execution" 
    	class="com.hp.application.automation.bamboo.tasks.RunFromAlmTask"
    	key="com.hp.application.automation.bamboo.tasks.RunFromAlmTask">
      <description>Execute HP tests from ALM</description>
      <category name="test"/>
      <configuration class="com.hp.application.automation.bamboo.tasks.RunFromAlmTaskConfigurator"/>
      <resource 
      	type="freemarker" 
      	name="edit" 
      	location="RunFromALM.ftl"/>
    </taskType>
    
</atlassian-plugin>